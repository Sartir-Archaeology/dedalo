						$html_contenido .= "\n <input class=\"css_check_box\" type=\"checkbox\" name=\"{$tipo}\" data-tipo=\"{$tipo}\" value=\"{$value}\" data-section_tipo=\"{$section_tipo}\" parent=\"{$parent}\" title=\"$html_title\" $checked  disabled />";						
