<?php

	# VISUALIZADOR HTML


	print "\n<!-- SELECT [tipo:$tipo section_id_matrix:$parent $section_tipo] $label -->";

	print "\n<div class=\"wrap_component css_wrap_select wrap_component_{$tipo}\" id=\"{$id_wrapper}\"
	data-tipo=\"{$tipo}\"
	data-lang=\"{$lang}\"
	data-parent=\"{$parent}\"
	data-section_tipo=\"{$section_tipo}\"
	data-modo=\"{$modo}\"
	data-dato='{$dato_string}'
	data-component_name=\"{$component_name}\"
	data-component_info='{$component_info}'
	>";

	# ETIQUETA (LABEL)
	$html_label = component_common_draw::draw_label($this);

	# CONTENIDO (INPUT)
	$html_contenido = '';
	switch($permissions) {

		case 0 :
				$html_contenido .= "";
				break;

		case 1 :
				$html_contenido .= $this->valor;
				break;


		case ($permissions>=2) :

				$html_contenido .= "\n <select class=\"css_select\"
				onchange=\"component_select.Save(this)\"
				onfocus=\"component_common.select_wrap(null,'$id_wrapper');\"
				name=\"{$input_name}\"
				data-tipo=\"{$tipo}\"
				data-lang=\"{$lang}\"
				data-section_tipo=\"{$section_tipo}\"
				data-parent=\"{$parent}\"
				title=\"$html_title\"
				tabindex=\"1\"
				> ";

				$selected = empty($dato) ? 'selected' : '';
				
				$html_contenido .= "\n <option value=\"\" {$selected}> </option>";


				foreach ($ar_list_of_values->result as $value => $rotulo) {

					$value   = (string)$value;
					$locator = (object)json_handler::decode($value);	# Locator is json encoded object
					#dump($locator," locator"); dump($dato," dato");

					$selected = in_array($locator, $dato) ? 'selected' : '';					

					$html_contenido .= "\n<option value='$value' {$selected}>";
					$html_contenido .= $rotulo;
					if(SHOW_DEBUG) {
						$html_contenido .= " ". trim($value);
					}
					$html_contenido .= "</option>";
				}
				$html_contenido .= "\n </select>";


				if(SHOW_DEBUG) {
					$html_contenido .= "\n <div class=\"debug_info\"> Current val: <strong>$valor</strong></div>";
				}


				if($permissions==3) {
					$html_contenido .= "\n <span class=\"css_span_debugger\" id=\"debugger_{$tipo}\" >{$debugger}</span>";
				}
				break;				

	}

	# Prepare content to show in page
	tools::prepare_content($html_contenido);


	# PRINT HTML
	print $html_label;
	print $html_contenido;

	if(SHOW_DEBUG) {
		echo $ar_list_of_values->debug;
	}

	print "\n</div><!-- /css_wrap_select SELECT [tipo:$tipo section_id_matrix:$parent] $label -->\n\n"; //wrap
?>
